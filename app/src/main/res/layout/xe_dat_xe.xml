<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    android:id="@+id/cardViewCar"
    app:cardElevation="6dp"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/bg_card">

        <!-- Hình ảnh xe -->
        <ImageView
            android:id="@+id/imgCar"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/porsche"/>

        <!-- Chủ xe -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/imgOwner"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/chuxe"
                android:layout_marginEnd="8dp"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_background"/>

            <TextView
                android:id="@+id/txtOwnerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nguyễn Đình Quang"
                android:textSize="16sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Thông tin xe -->
        <TextView
            android:id="@+id/txtCarName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SUZUKI XL7 2023"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/txtCarDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số tự động • 7 chỗ • Xăng"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="4dp"/>

        <!-- Địa điểm -->
        <TextView
            android:id="@+id/txtCarLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quận 7, TP. Hồ Chí Minh"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="4dp"/>

        <!-- Giá thuê -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/txtCarPriceOld"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="918K"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                />

            <TextView
                android:id="@+id/txtCarPriceNew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="798K/ngày"
                android:textSize="16sp"
                android:textColor="@android:color/holo_green_dark"
                android:textStyle="bold"
                android:layout_marginStart="6dp"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
